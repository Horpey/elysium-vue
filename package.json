{
  "name": "@elysium-vue/monorepo",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "Scifi UI Framework for Vue.js",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "docs": "pnpm -r --filter='./apps/**' run dev",
    "build": "NODE_OPTIONS=\"--max-old-space-size=8192\" pnpm -r --parallel --filter='./packages/**' run build && pnpm -r --parallel --filter='./apps/**' run build",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" pnpm -r --parallel --filter='./packages/**' run dev",
    "test": "pnpm -r --filter='./packages/**' run test",
    "test:apps": "pnpm -r --filter='./apps/**' run test",
    "test:all": "pnpm -r --parallel --filter='./packages/**' run test",
    "lint": "pnpm -r --filter='./packages/**' run lint",
    "lint:apps": "pnpm -r --filter='./apps/**' run lint",
    "typecheck": "pnpm -r --filter='./packages/**' run typecheck",
    "typecheck:apps": "pnpm -r --filter='./apps/**' run typecheck",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "lint-staged": "15.1.0",
    "simple-git-hooks": "2.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
